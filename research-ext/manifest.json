{
  "manifest_version": 3,
  "name": "Research Assistant",
  "version": "1.0",
  "description": "A Chrome side panel extension that assists with research tasks.",
  "permissions": ["sidePanel", "storage", "activeTab", "tabs", "scripting"],
  
  "host_permissions": ["http://localhost:8091/*", "<all_urls>"],
  "action": {
    "default_title": "Research Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
